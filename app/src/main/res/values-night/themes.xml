<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EverydayGraditude" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/pink80</item>
        <item name="colorOnPrimary">@color/pink80</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/pink80</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CardBackgroundTheme">
        <item name="android:background">@drawable/dark_shape_note_background</item>
    </style>

    <style name="CardButtonTheme">
        <item name="android:backgroundTint">@color/pink50</item>
        <item name="android:tint">@color/pink20</item>
    </style>

    <style name="CardTextViewTheme">
        <item name="android:textColor">@color/pink10</item>
    </style>

    <style name="ShareDialogTheme">
        <item name="android:background">@color/pink80</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/pink80</item>
    </style>

</resources>