<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EverydayGraditude" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="CardBackgroundTheme">
        <item name="android:background">@drawable/shape_note_background</item>
    </style>

    <style name="CardButtonTheme">
        <item name="android:backgroundTint">@color/pink20</item>
        <item name="android:tint">@color/pink50</item>
    </style>

    <style name="CardTextViewTheme">
        <item name="android:textColor">@color/pink80</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ShareDialogTheme">
        <item name="android:background">@color/pink110</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/white</item>
    </style>

</resources>